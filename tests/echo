# Echo without argument -------------------------------------------------------
echo 'echo' | tcsim
0.000000 * :
# Echo string -----------------------------------------------------------------
echo 'echo "just a test"' | tcsim
0.000000 * : just a test
# Echo expression -------------------------------------------------------------
echo 'echo 7*3*2' | tcsim
0.000000 * : 42
# Echo expression (%u) --------------------------------------------------------
echo 'echo %u 0x100 >> 1' | tcsim
0.000000 * : 128
# Echo expression (%x) --------------------------------------------------------
echo 'echo %x 1 << 8' | tcsim
0.000000 * : 100
# Echo expression (0x%x) ------------------------------------------------------
echo 'echo 0x%x 1 << 8' | tcsim
0.000000 * : 0x100
# Echo mix --------------------------------------------------------------------
echo 'echo 5 "plus" 7 "is" 5+7' | tcsim
0.000000 * : 5 plus 7 is 12
