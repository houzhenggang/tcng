# tcng.l used strtol (hex) -----------------------------------------------------
tcc -c -u stderr -Wnounused 2>&1
$a = 0x7fffffff;
$b = 0x80000000;
$c = 0xffffffff;
EOF
$a = 2147483647
$b = 2147483648
$c = 4294967295
# tcng.l used strtol (dec) -----------------------------------------------------
tcc -c -u stderr -Wnounused 2>&1
$a = 2147483647;
$b = 2147483648;
$c = 4294967295;
EOF
$a = 2147483647
$b = 2147483648
$c = 4294967295
# tcng.l used strtol (bin) -----------------------------------------------------
tcc -c -u stderr -Wnounused 2>&1
    /*          1         2         3   */
    /* 12345678901234567890123456789012 */
$a = 0b01111111111111111111111111111111;
$b = 0b10000000000000000000000000000000;
$c = 0b11111111111111111111111111111111;
EOF
$a = 2147483647
$b = 2147483648
$c = 4294967295
# tcsim used strtol for binary numbers ----------------------------------------
tcsim
echo 0b10000000000000000000000000000000
EOF
0.000000 * : 2147483648
